<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Items </title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>My Things To Do</h1>
    
    <form action="/things" method="POST" class="add-form">
      <input type="text" name="name" placeholder="Add a new thing..." required>
      <button type="submit">Add</button>
    </form>
    
    <ul class="things-list">
      <% things.forEach(thing => { %>
        <li class="<%= thing.completed ? 'completed' : '' %>">
          <span><%= thing.name %></span>
          <div class="actions">
            <form action="/things/<%= thing.id %>/complete" method="POST">
              <button type="submit"><%= thing.completed ? 'Undo' : 'Complete' %></button>
            </form>
            <form action="/things/<%= thing.id %>/delete" method="POST">
              <button type="submit" class="delete">Delete</button>
            </form>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
  
  <script src="/script.js"></script>
</body>
</html>